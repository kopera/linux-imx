/ {
	regulators {
		wifi_reg: wifi_reg {
			compatible = "regulator-fixed";
			regulator-name = "WIFI_REG";
			regulator-min-microvolt = <3300000>;
			regulator-max-microvolt = <3300000>;
			gpio = <&gpio1 8 GPIO_ACTIVE_HIGH>;
			enable-active-high;
			startup-delay-us = <20000>;
		};

		bluetooth_vbat_reg: bluetooth_vbat_reg {
			compatible = "regulator-fixed";
			regulator-name = "BLUETOOTH_VBAT_REG";
			regulator-min-microvolt = <3300000>;
			regulator-max-microvolt = <3300000>;
		};

		bluetooth_vddio_reg: bluetooth_vddio_reg {
			compatible = "regulator-fixed";
			regulator-name = "BLUETOOTH_VDDIO_REG";
			regulator-min-microvolt = <3300000>;
			regulator-max-microvolt = <3300000>;
		};
	};
};


/* Disable UART4 buffer */
&gpio5 {
	uart4_buf_en_hog {
		gpio-hog;
		gpios = <5 0>;
		output-low;
		pinctrl-names = "default";
		pinctrl-0 = <&pinctrl_uart4_buf_en>;
		line-name = "uart4_buf_en";
	};
};


/* Bluetooth */
&uart4 {
	pinctrl-names = "default";
	pinctrl-0 = <&pinctrl_uart4>, <&pinctrl_bluetooth>;
	status = "okay";

	bluetooth {
		compatible = "brcm,bcm4330-bt";
		max-speed = <3000000>;
		shutdown-gpios = <&gpio3 4 GPIO_ACTIVE_HIGH>;
		vbat-supply = <&bluetooth_vbat_reg>;
		vddio-supply = <&bluetooth_vddio_reg>;
	};
};

/* Set WIFI SDIO voltage at 1.8V */
&gpio1 {
	usdhc2_vsel_hog {
		gpio-hog;
		gpios = <4 0>;
		output-high;
		pinctrl-names = "default";
		pinctrl-0 = <&pinctrl_usdhc2_vsel>;
		line-name = "usdhc2_vsel";
	};
};

/* Set SDIO function to WIFI */
&gpio3 {
	usdhc2_fsel_hog {
		gpio-hog;
		gpios = <2 0>;
		output-high;
		pinctrl-names = "default";
		pinctrl-0 = <&pinctrl_usdhc2_fsel>;
		line-name = "usdhc2_fsel";
	};
};

/* WIFI */
&usdhc2 {
	#address-cells = <1>;
	#size-cells = <0>;

	pinctrl-names = "default", "state_100mhz", "state_200mhz";
	pinctrl-0 = <&pinctrl_usdhc2>, <&pinctrl_wifi>;
	pinctrl-1 = <&pinctrl_usdhc2_100mhz>, <&pinctrl_wifi>;
	pinctrl-2 = <&pinctrl_usdhc2_200mhz>, <&pinctrl_wifi>;
	bus-width = <4>;
	vmmc-supply = <&wifi_reg>;
	non-removable;
	status = "okay";

	brcmf: wifi@1 {
		reg = <1>;
		compatible = "brcm,bcm4329-fmac";
	};
};

